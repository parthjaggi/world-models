    "version": "0.2.0",
    "configurations": [
        {
            "name": "generate-data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/data/generation_script.py",
            "console": "integratedTerminal",
            "args": [
                "--rollouts", "1000", 
                "--rootdir", "datasets/carracing",
                "--threads", "1"
            ],
            "subProcess": true,
            "justMyCode": false,
        },
        {
            "name": "train-vae",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/trainvae.py",
            "console": "integratedTerminal",
            "args": [
                "--logdir", "exp_dir",
                "--early-stopping-patience", "60",
                
                // "--dataset-dir", "datasets/carracing",
                // "--dataset-dir", "datasets/dtse_test4_2",
                "--dataset-dir", "datasets/dtse_test0_1",
            ],
            "subProcess": true,
            "justMyCode": false,
        }
    ]
}